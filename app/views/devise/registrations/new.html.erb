<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h3>Sign up <small>it's free!</small></h3> 
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <p>
          <%= f.text_field :first_name, placeholder: 'username (will be shown publicly)', class: 'form-control' %>
        </p>
        <p>
          <%= f.text_field :email, placeholder: 'email', class: 'form-control' %>
        </p>
        <p>
          <%= f.password_field :password, placeholder: 'password', class: 'form-control' %>
        </p>
        <p>
          <%= f.password_field :password_confirmation, placeholder: 'password confirmation',  class: 'form-control' %>
        </p>

        <p>
          <%= f.label :role %>:
          <%= f.select :role, options_for_select(User.roles.keys), :class => "form-control", required: true %>
        </p>
        <p>
          <%= f.submit 'Sign up', class: 'btn sign-up-button btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>